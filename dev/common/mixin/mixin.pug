mixin list(className,...items)
    ul(class=className + '__list')
        each item in items
            li(class=className + '__item')
                a(class=className + '__link',href='#')=item

mixin link(href, name)
    a(class!=attributes.class href=href)=name

mixin article(title,data)
    .article
        .article__container
            a.article__link(href='#')
                h2.article__title=title
            span.article__data=data
            if block
                block
            else
                p No content provided